<form class="row container justify-content-center mt-5">
    <div class="col-5 m-2 form-group">
        <input class="form-control" type="file" id="formFile" required>
    </div>

    <div class="col-12"></div>

    <div class="col-3 mt-2 mb-2 form-floating">
        <input class="form-control" placeholder="" id="productName" required>
        <label for="productName"  class="newLabel">Nom</label>
    </div>
    
    <div class="col-3 mt-2 mb-2 form-floating">
        <textarea class="form-control" placeholder="Description" id="productDesc" style="min-height: 57px;" required ></textarea>
        <label class="newLabel" for="productDesc">Description</label>
    </div>
    
    <div class="col-12"></div>
    
    <div class="col-2 mt-2 form-floating">
        <input class="form-control" placeholder="" id="productQty" required>
        <label for="productQty"  class="newLabel">Qté</label>
    </div>

    <div class="col-1 mt-2 form-floating">
        <input class="form-control" placeholder="" id="productPrice" required>
        <label for="productPrice"  class="newLabel">Prix (€)</label>
    </div>

    <div class="row col-5 m-2">
        <div class="col form-floating">
            <input class="form-control" placeholder="" id="productHeight" required>
            <label for="productHeight"  class="newLabel">Hauteur</label>
        </div>
        <span class="newDimensions col-1">x</span>
        <div class="col form-floating">
            <input class="form-control" placeholder="" id="productWidth" required>
            <label for="productWidth"  class="newLabel">Longueur</label>
        </div>
        <span class="newDimensions col-1">x</span>
        <div class="col form-floating">
            <input class="form-control" placeholder="" id="productLength" required>
            <label for="productLength"  class="newLabel">Largeur</label>
        </div>
    </div>
    <div class="d-flex justify-content-center mt-5">
        <button class="btn btn-context" type="submit">Mettre en vente</button>
    </div>    
</form>