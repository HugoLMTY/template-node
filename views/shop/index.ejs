<h1 class="title-context">La boutique</h1>

<div class="row container-fluid justify-content-center">

    <% if (locals.isConnected) {%> 
        <form action="/shop/new" method="POST">
            <a href="/shop/addProduct" class="btn btn-context" style="position: relative; left: 80%; transform: scale(1.2);" type="submit" >Ajouter un produit</a>
        </form>
    <% } %> 
    <div class="col-3 justify-content-center p-4">
        <h4 class="title-context">Filtrer les résulats</h4>
        <form action="/shop/" class="container" method="GET">

            <%- include('forms/_forms_filters') %>

            <!-- <button class="btn btn-secondary w-100" type="reset"> Rénitialiser les filtres </button> -->
            <button class="btn btn-context w-100" type="submit"> Chercher </button>
        </form>
    </div>

    <div class="col-9 row row-cols-4">
        <% productList.forEach(product => { %> 
            <a href="/shop/product/<%= product._id %>" class="col productHolder mb-5">
                <img class="productImg" src="/img/<%= product.pathImg %>" alt="product_1">
                <div class="productShadow">
                    <p class="productTitle"> <%= product.name %> </p>
                    <p class="productPrice btn-context"><%= product.price %>€</p>
                    <p class="productRating"> <%= product.rating %> <span class="fa fa-star productRatingStar"></span> </p>
                </div>
            </a>
        <% }) %>
        
    </div>
</div>